<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@android:drawable/divider_horizontal_textfield"
    android:orientation="vertical"
    android:showDividers="middle" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    
    <Button
        android:id="@+id/waddphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button_style"
        android:textColor="#FFFFFF"
        android:text="添加图片可选" />

    <EditText
        android:id="@+id/wgddecribe"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp" android:ems="10"
        android:hint="点此添加物品名称描述"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>
 
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/wtextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 价格:   "
             android:textSize="20sp"
            android:textColor="#0A0A0A" />

        <EditText
            android:id="@+id/wprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="20sp"
            android:ems="10"
            android:hint="点此添加需求价格"
            android:inputType="numberDecimal" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/wtextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 数量:   "
             android:textSize="20sp"
             android:textColor="#0A0A0A" />

        <EditText
            android:id="@+id/wnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:textSize="20sp"
            android:inputType="number" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/wtextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 选择分类:"
             android:textSize="20sp"
             android:textColor="#0A0A0A" />

        <Spinner
            android:id="@+id/wspinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/wtextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信提醒业务（需积分）" />

        <CheckBox
            android:id="@+id/wcheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>

    <Button
        android:id="@+id/wcfpub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button_style"
        android:textColor="#FFFFFF"
        android:text="确认求购" />

</LinearLayout>
</ScrollView>
